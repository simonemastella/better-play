{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "noEmit": false,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "incremental": false,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true, //do i want to keep it true??
    "allowImportingTsExtensions": false
  },
  "include": ["./typechain-types", "./index.ts"]
}
