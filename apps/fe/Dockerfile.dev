FROM node:20-alpine

WORKDIR /app

# Install dependencies for development
RUN apk add --no-cache git

# Copy package files
COPY package.json yarn.lock ./
COPY .yarnrc.yml ./
COPY .yarn ./.yarn

# Copy workspace structure
COPY packages ./packages
COPY apps/fe ./apps/fe

# Install dependencies
RUN yarn install

WORKDIR /app/apps/fe

# Expose the port
EXPOSE 5173

# Start the dev server
CMD ["yarn", "dev"]