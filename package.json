{
  "name": "better-play",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "docker:start": "docker compose up -d --build",
    "docker:stop": "docker compose down",
    "dev": "yarn workspaces foreach -Ap run dev",
    "build": "yarn workspaces foreach -Ap run build",
    "lint": "yarn workspaces foreach -Ap run lint",
    "type-check": "yarn workspaces foreach -Ap run type-check",
    "test": "yarn workspaces foreach -Ap run test",
    "clean": "yarn workspaces foreach -Ap run clean"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=18.0.0"
  }
}